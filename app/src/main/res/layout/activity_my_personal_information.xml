<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyPersonalInformation">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Switch
                android:id="@+id/switch2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginStart="5sp"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/ediitextdesignregisterpage"
                android:gravity="right"
                android:padding="5sp"
                android:text="Visible To All"
                android:textColor="#000"
                android:textSize="18sp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imageView38"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10sp"
                app:srcCompat="@drawable/ic_baseline_fingerprint_24" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ediitextdesignregisterpage"
                android:drawableStart="@drawable/ic_baseline_person_24_registerpage"
                android:paddingLeft="10sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextPhone5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ediitextdesignregisterpage"
                android:drawableStart="@drawable/ic_baseline_local_phone_24_registerpage"
                android:ems="10"
                android:hint="Add alternate mobile no."
                android:inputType="phone"
                android:paddingLeft="10sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextPhone6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ediitextdesignregisterpage"
                android:drawableStart="@drawable/ic_baseline_local_phone_24_registerpage"
                android:ems="10"
                android:hint="Add Father's mobile no."
                android:inputType="phone"
                android:paddingLeft="10sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextPhone7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ediitextdesignregisterpage"
                android:drawableStart="@drawable/ic_baseline_local_phone_24_registerpage"
                android:ems="10"
                android:hint="Add Mother's mobile no."
                android:inputType="phone"
                android:paddingLeft="10sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextTextMultiLine3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ediitextdesignregisterpage"
                android:drawableStart="@android:drawable/ic_menu_mapmode"
                android:drawableTint="#0E74C5"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Present Address"
                android:inputType="textMultiLine"
                android:paddingLeft="10sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextTextMultiLine4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ediitextdesignregisterpage"
                android:drawableStart="@android:drawable/ic_menu_mapmode"
                android:drawableTint="#0E74C5"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Permanent Address"
                android:inputType="textMultiLine"
                android:paddingLeft="10sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:textColor="#000"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/editTextDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/ediitextdesignregisterpage"
                android:drawableStart="@android:drawable/ic_menu_today"
                android:drawableTint="#0E74C5"
                android:ems="10"
                android:hint="Enter DOB ( DD-MM-YYYY )"
                android:inputType="date"
                android:paddingLeft="10sp"
                android:paddingTop="5sp"
                android:paddingRight="10sp"
                android:paddingBottom="5sp"
                android:textColor="#000"
                android:textSize="18sp" />

            <Button
                android:id="@+id/button21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:background="@drawable/ediitextdesignregisterpage"
                android:text="Update"
                app:backgroundTint="#0E74C5" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>